@page "/"

@inject NavigationManager Navigator

@if (string.IsNullOrWhiteSpace(_presentState))
{
    <TraderContact />
}
else
{
    <TradeOffers StateString=@_presentState />
}


@code {
    private string? _presentState;

    protected override async Task OnInitializedAsync()
    {
        _presentState = Utils.GetStateFromQuery(Navigator);

        await base.OnInitializedAsync();
    }
}